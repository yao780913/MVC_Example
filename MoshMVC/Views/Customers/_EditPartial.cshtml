@model MoshMVC.Models.Customer
@{
    var membershipTypeList = ViewBag.MembershipTypeList as SelectList;
}

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Edit</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>

        @using (Html.BeginForm("EditPartial", "Customers"))
        {
            @Html.AntiForgeryToken()
            <div class="modal-body">
                @Html.ValidationSummary(true, "Please fix the following errors.")
                <div class="form-group">
                    @Html.DisplayNameFor(m => m.Id)
                    @Html.TextBoxFor(m => m.Id, htmlAttributes: new { @disabled = "disabled", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Id, "", htmlAttributes: new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.DisplayNameFor(m => m.Name)
                    @Html.TextBoxFor(m => m.Name, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Name, "", htmlAttributes: new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.DisplayNameFor(m => m.MembershipTypeId)
                    @Html.DropDownListFor(m => m.MembershipTypeId, membershipTypeList, "-- Select --", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Name, "", htmlAttributes: new { @class = "text-danger" })
                </div>
            </div>
            <div class="modal-footer">
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        }
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}