@model IEnumerable<MoshMVC.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movie</h2>

<input type="button" value="New" class="btn btn-primary"
       onclick="location.href='@Url.Action("New", "Movies")'" />
<br />


@if (!Model.Any())
{
    <p>
        No Records.
    </p>
    return;
}

<table id="movies" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>MovieName</th>
            <th>Genre</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                @*<td>@Html.ActionLink(movie.Name, "Detail", "Movies", new { id = movie.Id }, null)</td>*@
                <td>@Html.ActionLink(movie.Name, "Edit", "Movies", new { id = movie.Id }, null)</td>
                <td>@movie.Genre.Name</td>
                <td>
                    <Button data-movie-id="@movie.Id" type="button" class="btn-link js-delete">Delete</Button>
                </td>
            </tr>
        }
    </tbody>
</table>


@section scripts
{
    <script>
        $(function () {
            $('#movies').on('click', '.js-delete', function () {
                var button = $(this);
                bootbox.confirm('Are you sure to delete this movie?', function (result) {
                    if (result) {
                        $.ajax({
                            url: 'api/movies/' + button.attr('data-movie-id'),
                            method: "DELETE",
                            success: function () {
                                bootbox.alert('success');
                                button.parents('tr').remove();
                            },
                            error: function () {
                                bootbox.alert("failed");
                            }
                        });
                    }
                });
            });
        });
    </script>
}